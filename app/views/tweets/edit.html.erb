<h1>Edit Tweet</h1>
<%= form_for @tweet do |f| %>
  <div class="form-group">
    <%= f.label :content, "Tweet Content" %>
    <%= f.text_area :content, class: "form-control" %>
  </div>
  <%= f.submit 'Update Tweet', class: "btn btn-primary" %>
<% end %>
<%= link_to 'Back to Tweets', tweets_path, class: "btn btn-secondary" %>
